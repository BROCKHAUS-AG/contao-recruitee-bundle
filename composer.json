{
    "name": "brockhaus-ag/contao-recruitee-bundle",
    "description": "Mit dem Contao Recruitee Bundle der BROCKHAUS AG können Sie Bewerbungen über ein Formular an Recruitee senden.",
    "keywords": [
        "contao",
        "bundle",
        "recuitee",
        "BROCKHAUS AG"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "BROCKHAUS AG",
            "email": "info@brockhaus-ag.de",
            "homepage": "https://www.brockhaus-ag.de",
            "role": "Developer"
        },
        {
            "name": "Niklas Lurse",
            "homepage": "https://github.com/INoTime",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/brockhaus-ag/contao-recruitee-bundle/issues",
        "source": "https://github.com/brockhaus-ag/contao-recruitee-bundle"
    },
    "require": {
      "contao/core-bundle": "^4.13",
      "ext-gd": "*",
      "ext-curl": "*",
      "ext-json": "*"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3",
        "contao/test-case": "^4.0",
        "phpunit/phpunit": "9.3.0",
        "symfony/http-client": "5.4.*",
        "symfony/phpunit-bridge": "4.4.*"
    },
    "autoload": {
        "psr-4": {
            "BrockhausAg\\ContaoRecruiteeBundle\\": "src/"
        }
    },
    "extra": {
        "contao-manager-plugin": "BrockhausAg\\ContaoRecruiteeBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true
        }
    }
}
